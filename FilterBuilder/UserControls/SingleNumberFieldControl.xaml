<UserControl x:Class="CmcScriptNet.FilterBuilder.UserControls.SingleNumberFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CmcScriptNet.FilterBuilder.UserControls"
             mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <Label Content="Field Value:"/>
        <!-- we can later change these to proper numberpicker controls-->
        <TextBox x:Name="numberFieldValue"
                Text="{Binding FieldValue, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</UserControl>
